(library (layout byte-size)
  (export byte-size)
  (import (micascheme) (layout keywords))

  (define-rules-syntax (keywords u8 u16 * vector)
    ((byte-size u8) 1)
    ((byte-size u16) 2)
    ((byte-size (* size item))
      (* size (byte-size item)))
    ((byte-size (vector item ...))
      (+ (byte-size item) ...)))
)
